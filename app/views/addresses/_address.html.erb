<tr>
  <td><%= address.id %></td>
  <td><%= address.street_address %></td>
  <td><%= address.secondary_address %></td>
  <td><%= address.zip_code %></td>
  <td><%= address.city.name %></td>
  <td><%= address.state.name %></td>
  <td><%= address.user.full_name %></td>

  <td><%= link_to "show", address_path(address) %></td>
  <td><%= link_to "edit", edit_address_path(address) %></td>
  <td><%= link_to "delete", address_path(address), method: :delete, data: {confirm: "Really really delete this address?"} %></td>
</tr>